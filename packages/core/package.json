{
  "name": "@human-protocol/core",
  "version": "1.0.0",
  "description": "Core Human Protocol contracts",
  "scripts": {
    "check-forge": "forge --version || echo 'Forge is not installed. Please install it to proceed' ", 
    "contracts:oppenzeplin": "forge install OpenZeppelin/openzeppelin-contracts@v4.9.2 --no-commit",
    "contracts:oppenzeplin-upgradeable": "forge install OpenZeppelin/openzeppelin-contracts-upgradeable@v4.9.2 --no-commit",
    "forge-std": "forge install foundry-rs/forge-std --no-commit",
    "clean": "forge clean",
    "test": "forge test",
    "coverage": "forge coverage",
    "deploy:proxies": "forge script script/DeployProxies.s.sol:DeployProxies --rpc-url polygonMumbai --broadcast --verify --legacy",
    "deploy:core": "forge script script/DeployCore.s.sol:DeployCore --rpc-url polygonMumbai --broadcast --verify --legacy",
    "upgrade:proxy": "forge script script/UpgradeProxies.s.sol:UpgradeProxiesScript",
    "build": "forge build",
    "compile": "forge compile && node postProcessABIs.js"
  },
  "keywords": [
    "human-protocol",
    "core",
    "solidity",
    "ethereum",
    "contracts"
  ],
  "license": "MIT",
  "dependencies": {
    "@openzeppelin/contracts": "4.9.2",
    "@openzeppelin/contracts-upgradeable": "^4.9.2"
  },
  "exports": {
    "./out/*:": "./out/*"
  }
}
