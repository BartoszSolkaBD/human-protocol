{
    "name": "core-human-contracts",
    "version": "1.0.0",
    "description": "Core Human Protocol contracts ",
    "scripts": {
      "contracts:oppenzeplin": "forge install OpenZeppelin/openzeppelin-contracts@v4.9.2 --no-commit",
      "contracts:oppenzeplin-upgradeable": "forge install OpenZeppelin/openzeppelin-contracts-upgradeable@v4.9.2 --no-commit",
      "contracts:clean": "forge clean", 
      "contracts:test": "forge test",
      "contracts:gas:report": "forge test --gas-report",
      "contracts:coverage": "forge coverage",
      "proxies:deploy": "forge script script/DeployProxies.s.sol:DeployProxies --rpc-url polygonMumbai --broadcast --verify --legacy",
      "core:deploy": "forge script script/DeployCore.s.sol:DeployCore --rpc-url polygonMumbai --broadcast --verify --legacy",
      "contracts:upgrade-proxies": "forge script script/UpgradeProxies.s.sol:UpgradeProxiesScript --rpc-url polygonMumbai --broadcast --verify --legacy",
      "contracts:compile": "forge compile",
      "contracts:size": "forge build --sizes"
    },
    "author": "HUMAN PROTOCOL",
    "license": "ISC",
    "dependencies": {
      "@openzeppelin/contracts": "^4.9.2",
      "@openzeppelin/contracts-upgradeable": "^4.9.2"
    }
  }
  